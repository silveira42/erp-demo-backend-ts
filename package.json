		"docker-prod-build": "docker compose -f docker-compose.prod.yml build",
		"docker-prod-up": "docker compose -f docker-compose.prod.yml up --build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iris-erp-backend/api.git"
