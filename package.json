	"bugs": {
		"url": "https://github.com/iris-erp-backend/api/issues"
	},
	"homepage": "https://github.com/iris-erp-backend/api#readme",
	"dependencies": {
		"@hono/node-server": "^1.0.1",
		"@prisma/client": "^5.5.2",
		"@types/node": "^22.5.5",
		"hono": "^4.1.4",
		"pg": "^8.12.0",
		"reflect-metadata": "^0.2.2",
		"typeorm": "^0.3.20",
		"yup": "^1.3.3"
	},
	"prisma": {
		"schema": "src/repositories/prisma/schema.prisma"
	},
